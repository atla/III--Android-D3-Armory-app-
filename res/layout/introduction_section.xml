<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_scrollview"
    android:layout_width="500dp"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="500dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="16dp"
                    android:text="You have not yet imported any characters. Start importing now or have a look at some samples we picked for you."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/addSelected"
                    android:layout_marginTop="16dp"
                    android:background="#ddd" />

                <Button
                    android:id="@+id/import_characters_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Import Characters" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/card_shadow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/barbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="16dp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Sample Characters"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/barb_fighter"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/LinearLayout03"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/hero_barbarian" />

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Fighter"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="LVL 60 Barbarian"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wizard_extension"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/LinearLayout03"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/hero_wizard" />

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Extension"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="LVL 60 Wizard"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
                
                
                <LinearLayout
                    android:id="@+id/witch_doctor_lolz"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/LinearLayout03"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/hero_witch_doctor" />

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Lolz"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="LVL 60 Witch Doctor"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dh_ladygoose"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/LinearLayout1"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/hero_demon_hunter" >
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/LinearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Ladygoose"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="LVL 60 Demon Hunter"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/monk_lenaki"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/LinearLayout1"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/hero_monk" />

                    <LinearLayout
                        android:id="@+id/LinearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:orientation="vertical"
                        android:padding="8dp" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Lenaki"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="LVL 60 Monk"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/card_shadow" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>