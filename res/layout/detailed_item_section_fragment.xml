<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pager_padding"
        android:layout_marginRight="@dimen/pager_padding"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" >

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#333">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/icon"
                    android:fontFamily="sans-serif-light"
                    android:gravity="top|left"
                    android:text="Item Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff9f00" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_marginLeft="16dp"
                    android:layout_width="60dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/item_name_subline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_name"
                    android:layout_below="@+id/item_name"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:text="Legendary-Crusader Shield"
                    android:textColor="#ff9f00"
                    android:textSize="14sp"
                    android:textStyle="italic" />

              

                <TextView
                    android:id="@+id/item_name_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_name_subline"
                    android:layout_below="@+id/item_name_subline"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:text="Main-Hand"
                    android:textColor="#aaa"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </RelativeLayout>
            
              <TextView
                  android:background="#333"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:layout_height="90dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    
                    android:layout_alignLeft="@+id/icon"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/icon"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="this is a very super super long or even longer text than you think it is. this is a very super super long or even longer text than you think it is. this is a very super super long or even longer text than you think it is. this is a very super super long or even longer text than you think it is. "
                    android:textColor="#ded"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/mainstat_layout"
                    android:background="#333"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/green_bubble"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:text="Over 9000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/lvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/gray_bubble"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:text="60 [63]"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333"
                        android:textSize="15sp" />
                </LinearLayout>
            <LinearLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="16dp" >

                <TextView
                    android:id="@+id/attributesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="PRIMARY ATTRIBUTES"
                    android:textColor="#3388ee"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/attributesSecondaryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="SECONDARY ATTRIBUTES"
                    android:textColor="#228888"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/attributesSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/attributesPassive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:textColor="#bb5500"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#eee" />

                <LinearLayout
                    android:id="@+id/gem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/gem1_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <LinearLayout
                        android:id="@+id/linewrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/gem1_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gem1_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/gem2_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <LinearLayout
                        android:id="@+id/linewrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/gem2_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gem2_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/gem3_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <LinearLayout
                        android:id="@+id/linewrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/gem3_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gem3_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-light"
                            android:gravity="left"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/card_shadow" />

            <LinearLayout
                android:id="@+id/action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:id="@+id/desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Suggestions"
                            android:textColor="#666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/action1_text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="See what other barbarians have in this slot"
                            android:textColor="#333" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="#ccc" />

                    <ImageButton
                        android:id="@+id/action1_button"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_goright" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/card_shadow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>