<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarStyle="outsideOverlay" >

    <LinearLayout
        android:id="@+id/card_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/pager_padding"
        android:layout_marginRight="@dimen/pager_padding"
        android:layout_marginTop="16dp"
        android:orientation="vertical" >

        <com.leihwelt.ExpandableHeightGridView
            android:id="@+id/list"
             android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:horizontalSpacing="16dp"
            android:numColumns="2"
            android:isScrollContainer="false"
            android:padding="16dp"
            tools:listitem="@layout/stat_grid_item" >
        </com.leihwelt.ExpandableHeightGridView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/card_shadow" />
    </LinearLayout>

</ScrollView>